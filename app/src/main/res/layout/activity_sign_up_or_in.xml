<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".activity.SignUp_Or_InActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/poppinslight"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:paddingBottom="10dp"
            android:paddingRight="30dp"
            android:text="Selamat Datang!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/poppinslight"
            android:textSize="18dp"
            android:paddingLeft="30dp"
            android:paddingBottom="30dp"
            android:paddingRight="30dp"
            android:textColor="#00aa13"
            android:text="Belanja apapun tanpa khawatir dengan kesehatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/ic_undraw_shopping_app_flsj"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <Button
            android:textSize="11dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinslight"
            android:id="@+id/btn_login"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/bg_btn1"
            android:text="Masuk"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />

        <TextView
            android:textSize="12dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinslight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atau"
            android:textColor="#000000"
            android:layout_margin="5dp"/>

        <Button
            android:textSize="11dp"
            android:fontFamily="@font/poppinslight"
            android:textAllCaps="false"
            android:id="@+id/btn_daftar"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:background="@drawable/bg_btn2"
            android:text="Belum punya akun? Daftar sekarang"
            android:textColor="#00aa13"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamu menyetujui "
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:textSize="12dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syarat dan Ketentuan"
                android:textColor="#00aa13"
                android:layout_marginTop="15dp"/>
            <TextView
                android:textSize="12dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" serta "
                android:textColor="#000000"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-15dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinslight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kebijakan privasi."
                android:textColor="#00aa13"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>